<br>
<div class="row">
  <div class="col-sm-6">
    <%= image_tag "1.png", :size => "500x550"%>
  </div>
  <div class="col-sm-6">
    <h1 class="text-center">Sign In</h1>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Sign In", class: "btn btn-dark btn-lg btn-block" %>
        <br>
        <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-warning btn-lg btn-block" %>
      </div>
    <% end %>
    <%= link_to "Forgot password?", new_user_password_path  %>
  </div>
</div>
