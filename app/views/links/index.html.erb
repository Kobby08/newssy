<header>
  <h3>Get all the news you need...</h3>
</header>
<div class="row">
  <!-- Link Content-->
  <div class="col-sm-9 float-right">
    <% @links.each do |link| %>
      <%= link_to link do  %>
        <div class="row">
          <img class="mr-3 img-fluid" src="assets/4.png" alt="image" width="100" height="50">
          <div class="link-body">
            <h4 class="link-title mb-1 mt-2"><%= link.title %></h4>
            <div class="link-meta mb-1"><span class="date">Submitted By: <%= link.channel.name %> | </span><span class="time"><%= time_ago_in_words(link.created_at) %> ago</span></div>
            <div class="reactions">
              <span><a href="#" class="badge badge-warning">8 comments</a></span>
            </div>
          </div>
        </div>
      <% end %>
      <hr>
    <% end %>
  </div>
  <!-- Categories -->
  <div class="col-sm-3 float-right">
    <%= link_to "Channels", channels_path, class: "btn btn-dark btn-block" %> <br>
    <div class="category">
      <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
        <li class="nav-link active" data-toggle="pill" role="tab"  aria-selected="true"><%= link_to "All News", links_path  %></li>
        <a class="nav-link"  data-toggle="pill" role="tab"  aria-selected="false">Sports</a>
        <a class="nav-link"  data-toggle="pill" role="tab"  aria-selected="false">Politics</a>
        <a class="nav-link"  data-toggle="pill" role="tab"  aria-selected="false">Business</a>
        <a class="nav-link"  data-toggle="pill" role="tab"  aria-selected="false">Entertainment</a>
        <a class="nav-link"  data-toggle="pill" role="tab"  aria-selected="false">Agriculture</a>
        <a class="nav-link"  data-toggle="pill" role="tab"  aria-selected="false">Education</a>
      </div>
    </div>
  </div>
</div>
